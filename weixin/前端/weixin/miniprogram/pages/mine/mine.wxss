/* pages/mine/mine.wxss */
.header {
  height: 270rpx;
  background-color: aliceblue;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.header image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.nickname {
  margin-left: 10rpx;
  margin-top: 80rpx;
  color: #333;
}

.section {
  padding-top: 10rpx;
}

.record {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: #999;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}

.record-hover {
  background-color: #eee;
  color: #333;
}

.record image {
  width: 30rpx;
  height: 30rpx;
}