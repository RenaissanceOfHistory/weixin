/* pages/profile/profile.wxss */
.container {
  padding: 10rpx;
  color: #333;
}

.section {
  width: 95%;
  margin: 10rpx auto;
}

.title {
  font-size: 1.2rem;
  font-weight: bold;
}

.profile-form {
  display: block;
  margin-top: 30rpx;
}

.input-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: #999;
  padding: 10rpx 0;
}

.input-group:hover {
  color: #333;
}

.input-group label {
  display: inline-block;
  width: 25%;
  line-height: 2rem;
  letter-spacing: 1.5rpx;
}

.input-group input,
.input-group picker,
.input-group radio-group,
.input-group textarea {
  width: 75%;
}

.input-group input,
.input-group picker {
  font-size: 0.9rem;
  padding: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.input-group input:hover {
  border-color: #999;
}

.input-placeholder {
  color: #333;
}

.input-group radio {
  transform: scale(0.8);
}

.input-group radio:last-child {
  margin-left: 50rpx;
}

.input-group textarea {
  background-color: #f9f9f9;
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 0.9rem;
  height: 200rpx;
  overflow: auto;
  letter-spacing: 0.1rem;
  border-radius: 10rpx;
  resize: vertical;
}

.btn-group {
  text-align: center;
  padding: 50rpx;
}

.btn-group button:last-child {
  margin-left: 30rpx;
}