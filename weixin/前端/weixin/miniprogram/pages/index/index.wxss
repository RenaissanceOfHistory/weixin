/**index.wxss**/
@import "../../app.wxss";

.header image {
  width: 100vw;
  height: 300rpx;
}

.nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #f1f1f1;
}

.nav .recommand {
  width: 26%;
  font-size: 1.33rem;
  font-weight: bold;
  background-color: #fefefe;
  padding: 10rpx;
}

.nav scroll-view {
  white-space: nowrap;
  width: 74%;
}

.recommand-item {
  display: inline-block;
  font-size: 0.9rem;
  margin: 0;
  color: #333;
  padding: 22rpx 25rpx 10rpx;
}

.recommand-hover {
  background-color: #ddd;
}

.recommand-active {
  font-weight: 600;
  font-family: Arial, Helvetica, sans-serif;
  text-shadow: 1rpx 5rpx 10rpx rgb(52, 99, 185);
  color: aliceblue;
  transform: scale(1.1);
}

.section {
  background-color: #fafafa;
  height:70vh;
  max-height: 70vh;
  overflow: auto;
}

.music-list {
  box-sizing: border-box;
  padding: 5rpx;
}

.music-item {
  float: left;
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 10rpx auto;
  padding: 10rpx 0;
}

.music-hover {
  background-color: #fff;
  box-shadow: 0 0 3rpx 3rpx rgba(92, 155, 180, 0.897);
  transform: scale(1.0001);
}

.music-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 5rpx;
  padding: 5rpx;
  border: 1rpx solid #ddd;
  background-color: #fff;
}

.artist {
  font-size: 0.9rem;
  margin-top: 10rpx;
}